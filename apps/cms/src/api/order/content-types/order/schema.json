{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "string"
    },
    "line_items": {
      "type": "json"
    },
    "total": {
      "type": "decimal"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "new",
        "processing",
        "done",
        "cancelled"
      ],
      "default": "new"
    },
    "payment_method": {
      "type": "enumeration",
      "enum": [
        "cod",
        "vnpay",
        "momo",
        "zalopay",
        "bank"
      ],
      "default": "cod"
    },
    "payment_ref": {
      "type": "string"
    }
  }
}